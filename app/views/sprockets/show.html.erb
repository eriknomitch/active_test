<%- model_class = Sprocket -%>
<div class="page-header">
  <h1><%=t '.title', :default => Sprocket %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @sprocket.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @sprocket.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:foo) %></dt>
      <dd><pre class="prettyprint"><%= image_tag @sprocket.foo.url(:medium)  %></pre></dd>
  </dl>
</div>


<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sprockets_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sprocket_path(@sprocket), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sprocket_path(@sprocket),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

