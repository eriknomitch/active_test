<%- model_class = Sprocket -%>
<div class="page-header">
  <h1><%=t '.title', :default => Sprocket %></h1>
</div>
 <%= search_form_for @q, class: "form-search form-group" do |f| %>
   <div class="input-group">
     <span class="input-group-addon">
       <%= glyph :search %>
     </span>
     <%= f.search_field :title_cont, class: "form-control", placeholder: "Sprockets by Title..." %>
     <span class="input-group-btn">
       <%= f.submit class: "btn btn-default" %>
     </span>
   </div>
 <% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sprockets.each do |sprocket| %>
      <tr>
        <td><%= sprocket.id %></td>
        <td><%= sprocket.title %></td>
        <td><%= sprocket.description %></td>
        <td><%=l sprocket.created_at, format: :long %></td>
        <td>
          <%= link_to sprocket_path(sprocket), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to sprocket_path(sprocket), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sprocket_path,
            :class => 'btn btn-primary' %>

<div class="paginator">
  <%= paginate @sprockets, theme: "twitter-bootstrap-3" %>
</div>
